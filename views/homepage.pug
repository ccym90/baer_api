extends layout

block content
  nav.navbar.navbar-inverse.navbar-fixed-top
    .container-fluid
      .navbar-header
        a.navbar-brand(href='#') Baer
      ul.nav.navbar-nav
        li.active
          a(href='#home') Home
        li
          a(href='#wander') Wander
        li
          a(href='#contactus') Contact Us
      ul.nav.navbar-nav.navbar-right
        li
          a(href='#basket')
           span.glyphicon.glyphicon-shopping-cart
              |  Basket
  .row#space
    .col-xs-9
    .col-xs-3
      img#homelogo.pull-right.img-responsive(src='./images/lo.png')
  body(data-spy='scroll' data-target='.navbar' data-offset='5000')
  .container
    .row#home
      each k in products
        .col-xs-4
          .thumbnail
            img(src=k.image)
            .caption
              h3= k.name
              h4= k.price
              p= k.description
              #addbasket.btn.btn-primary.products(data-id=k, role='button') Add to Basket
    hr        
    .row
      h2#basket Basket
      .col-xs-3#itemsbrought
        br
        button#checkout.btn.btn-success(type='button') Checkout!
    hr
    .row#explore
      h2#wander Wander
      h4 Explore the globe to see where our sunnies have landed!
        form#controls.form-inline
          .form-group
          label(for='location')=Location
          input#location.form-control(type='text', options='bounds' placeholder='Search for a location')
          button#go.btn.btn-default(type='text') Wander
          .col-md4#map
    hr
    .row-fluid
        h2#contactus Contact Us
        h3 Please contact our team at baer@gmail.com for any enquiries 
    hr
block scripts

  script(src='/js/jquery.combinedScroll.js')
  script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyChKDygm4qTa1iDeBw5nlF6J4oKgPbZ8fk&libraries=places&callback=initMap', async='', defer='')
  script(src='/js/markerclusterer.js')
  script(src='/js/shop.js')
  script(src='/js/map.js')
  link(href='https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css', rel='stylesheet')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js')