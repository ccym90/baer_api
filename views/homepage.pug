extends layout

block content
  nav.navbar.navbar-default.navbar-fixed-top
    .container-fluid
      .navbar-header
        a.navbar-brand(href='#') Baer
      ul.nav.navbar-nav
        li.active
          a(href='#home') Home
        li
          a(href='#wander') Wander
        li
          a(href='#contactus') Contact Us
      ul.nav.navbar-nav.navbar-right
        li
          a(href='#basket')
           span.glyphicon.glyphicon-shopping-cart
              |  Basket
        li
          a(href='#logout')
            span.glyphicon.glyphicon-log-in
            |  Logout
  .container(style='background-color:red; margin-top:100px;')
    .row(style='background-color: yellow;')
      each k in products
        .col-xs-4
          h3= k.name
          h2= k.price
          h4= k.description
          img(src=k.image)
          button.btn.btn-info(type='button') Add
    hr        
    .row#basket
